<resources>

    <!-- Base application theme. -->
    <style name="AppMaterialTheme" parent="MyMaterialTheme.Base">
        <!-- Customize your theme here. -->
    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>


        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowNoTitle">true</item>

        <!-- use to make contextual action mode overlap the Toolbar -->
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="MyToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@android:color/white</item>  <!-- Text color of Toolbar Title -->
        <item name="android:textColorSecondary">@android:color/white</item><!-- Color of Overflow Menu and color of Navigation Drawer Icon -->
    </style>

    <style name="MyPopupTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@android:color/white</item><!--Background of Overflow Menu-->
        <item name="android:textColorPrimary">@android:color/darker_gray</item><!-- Text color of Overflow Menu items-->
    </style>

</resources>
